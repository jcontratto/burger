    <div class="container">
        <div class="row">
              {{#each burger_data}} {{#unless this.devoured}}
            <div class="col-md-9 text-center">
                {{this.id}}. {{this.burger_name}}
            </div>
            <div class="col-md-3 text-center">
                <form class="devour-form button-size">
                    <input input type="hidden" class="burger_id" type="text" value={{this.id}}>
                    <br>
                    <button type="submit" class="btn btn-default">Crush It!</button>
                </form>
            </div>
            {{/unless}} {{/each}}
            <div class="col-md-6 text-center" class="task">
                {{#each burger_data}} {{#if this.devoured}}
                <input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}"> {{/if}} {{/each}}
            </div>
        </div>
    </div>
