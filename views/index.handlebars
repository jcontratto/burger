

<h1>Crush That Burger!</h1>

<main>
    <div class="container">
        <div class="row">
            <div class="col s6">
                <p>Choose the burger you want to devour:</p>  
                {{#each burgers}} {{#unless this.devoured}}
                <div>   
                    <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                        <button type="submit" class="burgerAvailable btn btn-lg btn-primary">{{this.burger_name}}</button>
                    </form>
                </div>
                {{/unless}} {{/each}}
            </div>

            <div class="col s6">
                {{#each burgers}} {{#if this.devoured}}
                <div class='burgerEaten'>
                    <div>
                        {{this.burger_name}}
                    </div>
                </div>
                {{/if}} {{/each}}
            </div>
        </div>
    </div>
</main>

<h2>Add Another Burger!</h2>

<div class="row">
    <div class="col s12">
        <form action="/burgers" method="POST">
            <input type="text" id="name" name="burger_name" placeholder="Add Another Burger">
            <button type="submit" class="addBurgerButton">Add Burger</button>
        </form>
    </div>
    
</div>